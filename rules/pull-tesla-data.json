{
	"conditions": {
		"check-event-type": "'${body.cron.event}' === 'Hour'",
		"enabled": "true"
	},
	"actions": {
		"action-tag": { 
			"type": "tag", 
			"value": "event - tesla data",
			"_expire": 9999
		},
        "pull-tesla-data": {
			"type": "endpoint",
            "_endpoint": "8115/get-data/0",
            "endpoint": "${tesla-api-url-base}/get-data/0",
            "body": "",
            "method": "GET",
            "headers": {
                "cron.event": "Hour",
                "cron.event.time": "${body.cron.event.time}"
			}
		}
	}
}
