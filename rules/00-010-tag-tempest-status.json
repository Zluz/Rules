{
	"conditions": {
		"check-tempest-event": " '${body.serial_number}' === '${tempest-device-serial}' ",
        "check-event-type": " '${body.type}' === 'device_status' "
	},
	"actions": {
		"action-tag": { 
			"type": "tag", 
			"value": "tempest - status",
			"_expire": 99999
		},
		"add label: tempest": {
			"type": "add-label",
			"label": "tempest"
		},
		"add label: test-label": {
			"type": "add-label",
			"label": "test-label"
		},
		"filter: only tempest": {
			"type": "rule-filter",
			"match": ".*tempest.*"
		}
	}
}
