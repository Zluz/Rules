{
	"conditions": {
		"check-event-type": "'${body.cron-event}' === 'Second'",
		"enabled": "true"
	},
	"actions": {
		"call-hue-bridge - check bathroom light": {
			"log-level": 1,
			"type": "endpoint",
			"endpoint": "${hue-02-url-base}/api/${hue-02-key}/lights/10",
			"method": "GET",
			"headers": {
				"cron-event": "${body.cron-event}",
				"cron-event-time": "${body.cron-event-time}"
			},
			"notes": {
				"device": "o-1995-a: bathroom light"
			}
		}
	}
}
