{
	"debug": true,
	"conditions": {
		"check-event-type-minute": "'${body.cron-event}' === 'Minute'",
		"enabled": true
	},
	"_conditions": {
		"check-event-type-hour": "'${body.cron-event}' === 'Hour'",
		"check-event-type-minute": "'${body.cron-event}' === 'Minute'",
		"check-event-time": " /T09|T10/.test( '${body.cron-event-time}' ) "
	},
	"actions": {
		"call-postgres-eval-illumination": {
			"type": "endpoint",
			"endpoint": "${postgres-query-url-base}/query",
			"method": "POST",
			"headers": {
				"test-header-from-action": "${timestamp}"
			},
			"body": {
				"sql": "SELECT AVG(illuminance) FROM tempest_observations WHERE timestamp >= EXTRACT(EPOCH FROM NOW() - INTERVAL '30 minutes');",
				"comment": "Rule: 90-300-call-postgres-eval-illumination"
			}
		}
	}
}
