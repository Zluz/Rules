{
	"debug": false,
	"conditions": {
		"action-is-eval-illumination": "'${headers.calling_action}' === 'call-postgres-eval-illumination'",
		"numeric result": " ${body.rows.0.percentile_cont} > 0 ",
		"enabled": "true"
	},
	"_conditions": {
        "event-is-illum-response": "'${body.comment}' === 'call-postgres-eval-illumination'",
		"check-event-type": " '${body.url}'.includes('request-info') ",
		"check-event-values": " '${body.headers.X-Forwarded-For}'.includes('192.168') "
	},
	"actions": {
		"set: Weather.average-illumination": { 
			"type": "set", 
			"name": "Weather",
			"path": "$.average-illumination",
			"_value": "${body.rows.0.avg}",
			"value": "${body.rows.0.percentile_cont}"
		},
		"post to influx": {
			"type": "post-influx",
			"bucket": "environmental",
			"measurement": "tempest_aggregation",
			"timestamp": "${timestamp}",
			"fields": {
				"average_illumination": "${body.rows.0.percentile_cont}"
			},
			"_fields": {
				"average_illumination": "${body.rows.0.avg}"
			}
		}
	}
}

