{
	"conditions": {
		"check-tempest-event": " '${body.serial_number}' === '${tempest-hub-serial}' ",
		"check-event-type": " '${body.type}' === 'hub_status' "
	},
	"actions": {
		"action-tag": { 
			"type": "tag", 
			"value": "tempest - hub",
			"expire": 1
		},
		"add label: tempest": {
			"type": "add-label",
			"label": "tempest"
		},
		"filter: only tempest": {
			"type": "rule-filter",
			"match": ".*tempest.*"
		}
	}
}
