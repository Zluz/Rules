{
	"conditions": {
		"check-event-type": "'${headers.uri-path}'.includes('/event/sensor')",
		"check-device": "'${body.network-mac}' == '${RPi-GarageAutoHAT}'",
		"check-sensor-type": "'${body.sensor_bank}' == 'latch'",
		"check-sensor-index": "'${body.sensor_index}' == '0'",
		"check-sensor-value": " ${body.value_new} == '1' "
	},
	"actions": {
		"action-set-var": { 
			"type": "set", 
			"name": "Home",
			"path": "$.garage.vehicle-1-door.fully-closed",
			"value": "false"
		},
		"action-tag": { 
			"type": "tag", 
			"value": "gar veh-1 door state",
			"expire": 999
		}
	}
}
