		"check-sensor-type": "'${body.sensor_bank}' == 'digital'",
		"check-sensor-index": "'${body.sensor_index}' == '0'",
		"check-sensor-value": " ${body.value_new} == '1' "
	},
	"actions": {
		"action-set-var": { 
			"type": "set", 
			"name": "Home",
			"path": "$.garage.ped-door",
			"value": "closed"
		},
		"action-tag": { 
			"type": "tag", 
			"value": "gar ped door closed",
			"expire": 999
		}
	}
}
