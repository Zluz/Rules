{
	"conditions": {
		"check-event-type": "'${headers.uri-path}' == '/event/sensor'",
		"check-device": "'${body.network-mac}' == '${RPi-GarageAutoHAT}'",
		"check-sensor-type": "'${body.sensor_bank}' == 'digital'",
		"check-sensor-index": "'${body.sensor_index}' == '0'",
		"check-sensor-value": " ${body.value_new} == '0' "
	},
	"actions": {
		"action-set-var": { 
			"type": "set", 
			"name": "garage-digital-0",
			"value": "true"
		},
		"action-tag": { 
			"type": "tag", 
			"value": "gar D-0 = 0",
			"expire": 999
		}
	}
}
